<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.eduayuso.cgkotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CGApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">

        <activity
            android:label="Computational Geometry with Kotlin"
            android:name=".features.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="Convex Hull"
            android:name=".features.convexhull.ConvexHullActivity">
        </activity>

        <activity
            android:label="Segment Intersection"
            android:name=".features.segmentintersection.SegmentIntersectionActivity">
        </activity>

    </application>

</manifest>